{
  "manifest_version": 3,
  "name": "Email Link Opener",
  "version": "1.0",
  "description": "Opens mailto links in selected email provider",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}